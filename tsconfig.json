{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/js/**/*.ts", "scripts/**/*.ts", "config.json"],
  "exclude": ["dist", "dist-run", "dist-web", "node_modules", "src/web"]
}